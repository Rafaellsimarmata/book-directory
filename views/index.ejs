<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Book Directory</title>

    <!-- bootstrap css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous" />

    <!-- Bootstrap Font Icon CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
  </head>
  <body>
    <div class="container" style="margin-top: 50px">
      <h1 class="text-center">E-Book Directory</h1>

      <!-- <button type="button" class="btn btn-info">Join Forum Diskusi</button> -->

      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <nav class="navbar bg-body-tertiary">
          <div class="container-fluid">
            <a href="/forum">
              <button type="button" class="btn btn-success" style="margin-right: 645px">Join Forum Diskusi</button>
            </a>
            <form class="d-flex" role="search" action="/search" method="post">
              <input class="form-control me-2" type="search" placeholder="Search" name="search" aria-label="Search" />
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
        </nav>
      </div>

      <table class="table text-center" style="margin-top: 25px">
        <thead>
          <tr class="table-primary">
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">Genre</th>
            <th scope="col">NIB</th>
            <th scope="col">Author</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% i = 1; %> <% for (book of books){ %>
          <tr class="table-light">
            <th scope="row"><%= i %></th>
            <td><%= book.name %></td>
            <td><%= book.genre %></td>
            <td><%= book.nib %></td>
            <td><%= book.author %></td>
            <td>
              <a href="/update/<%= book.id %>">
                <button type="button" class="btn btn-info">Update</button>
              </a>
              <a href="/delete/<%= book.id %>">
                <button type="button" class="btn btn-danger">Delete</button>
              </a>
            </td>
          </tr>
          <% i++ %> <% } %>
        </tbody>
      </table>
    </div>

    <div class="container" style="margin-top: 100px">
      <a href="add">
        <div class="d-grid gap-2 col-4 mx-auto">
          <button class="btn btn-primary" type="button">Add Book</button>
        </div>
      </a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  </body>
</html>
